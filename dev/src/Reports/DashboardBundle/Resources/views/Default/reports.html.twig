{% extends "base.html.twig" %}
{% block siteTitle %}Raporty{% endblock %}
{% block bodyClass %}dashboard reports{% endblock %}
{% block body %}
    {% include "header.html.twig" %}    
    <div class="container">
        <div class="row">
            <div class="col-lg-3 report-colum panel panel-info">
                <div class="panel-heading">Wybierz klienta</div>
                <div class="panel-body">
                    <input type="text" class="form-control col-lg-8 clients-search reports-search" placeholder="Szukaj">
                    <ul class="nav nav-pills nav-stacked">
                        {% for client in clients %}
                            <li{{ app.request.get('client') == client ? ' class="campaigns-li active"' : ' class="clients-li"' }}><a href="{{ path('dashboard', { 'page' : 'reports', 'client' : client }) }}">{{ client }}</a></li>    
                            {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-3 report-colum panel {{ app.request.get('client') ? 'panel-info' : 'panel-default' }}">
                <div class="panel-heading">Wybierz kampanię</div>
                <div class="panel-body">
                    <div class="panel-disabled-info{{ app.request.get('client') ? ' hidden' : '' }}">
                        <img src="{{ asset('assets/images/logo-disabled.png') }}" alt="sparrow logo" class="disabled-logo"/>
                        <h3>Proszę wybrać klienta</h3>
                    </div>
                    {% if app.request.get('client') %}
                        <input type="text" class="form-control col-lg-8 campaigns-search reports-search" placeholder="Szukaj">
                        <ul class="nav nav-tabs" style="margin-bottom: 15px;">
                            <li class="active"><a href="#active" data-toggle="tab">Aktywne</a></li>
                            <li class=""><a href="#inactive" data-toggle="tab">Niekatywne</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade active in" id="active">
                                <ul class="nav nav-pills nav-stacked">
                                    {% for campaign in campaigns %}
                                        <li{{ app.request.get('campaign') == campaign ? ' class="campaigns-li active"' : ' class="campaigns-li"' }}><a href="{{ path('dashboard', { 'page' : 'reports', 'client' : app.request.get('client'), 'campaign' : campaign }) }}">{{ campaign }}</a></li>    
                                        {% endfor %}
                                </ul> 
                            </div>
                            <div class="tab-pane fade in" id="inactive">

                            </div>
                        </div>
                    {% endif %}
                </div>


            </div>
            <div class="col-lg-6 report-colum panel panel-info">
                <div class="panel-heading">Wybierz zakres dat i raport</div>
                <div class="panel-body">
                    <div class="panel-disabled-info hidden">
                        <img src="{{ asset('assets/images/logo-disabled.png') }}" alt="sparrow logo" class="disabled-logo"/>
                        <h3>Proszę wybrać kampanię</h3>
                    </div>


                    <div class="col-lg-3 input-append date" id="dp3" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
                        <label for="startDate">Data początkowa: </label>
                        <input class="span2 form-control datepicker" size="16" id="startDate" type="text" value="12-02-2012">
                        <span class="add-on"><i class="icon-th"></i></span>
                    </div>
                    <div class="col-lg-3 input-append date" id="dp4" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
                        <label for="startDate">Data końcowa: </label>
                        <input class="span2 form-control datepicker" size="16" id="endDate" type="text" value="12-02-2012">
                        <span class="add-on"><i class="icon-th"></i></span>
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control col-lg-8 campaigns-search reports-search reports-search-last" placeholder="Szukaj">
                    </div>

                    <ul class="nav nav-pills nav-stacked raports-list">
                        <li><a href="#">Ilosciowo-kosztowy rabatowe WSZYSTKIE KAMPANIE </a></li>
                        <li><a href="#">Efektywności Dotarcia i Sprzedaży</a></li>
                        <li><a href="#">Grupa statusów - NARASTAJĄCY [od akcji:115062 wzwyż]</a></li> 
                        <li><a href="#">Konsultantci</a></li> 
                    </ul>
                </div>
            </div>

            <div class="col-lg-12 panel report-buttons-strip">
                <div class="panel-body row">
                    <div class="col-lg-9"></div>
                    <div class="col-lg-3">
                        <button type="button" class="btn btn-disabled btn">Generuj html</button>
                        <button type="button" class="btn btn-disabled btn">Pobierz *.xls</button>
                    </div>    
                </div>
            </div>
        </div>
    </div>
{% endblock %}
