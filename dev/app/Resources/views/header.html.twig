<div class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Sparrow Reports</a>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav">
                <li{% if app.request.getPathInfo == '/dashboard/index' %} class="active"{% endif %}>
                    <a href="{{ path('dashboard', { 'page' : 'index' }) }}">Kokpit</a>
                </li>
                <li{% if app.request.getPathInfo == '/dashboard/profile' %} class="active"{% endif %}>
                    <a href="{{ path('dashboard', { 'page' : 'profile' }) }}">Profil</a>
                </li>
                {% if session.role == 'a' %}
                <li{% if app.request.getPathInfo == '/dashboard/users' %} class="active"{% endif %}>
                    <a href="{{ path('dashboard', { 'page' : 'users' }) }}">Personel</a>
                </li>
                {% endif %}
            </ul>
            <form class="navbar-form navbar-left">
                <input type="text" class="form-control col-lg-8" placeholder="Szukaj">
            </form>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="{{ path('dashboard', { 'page' : 'profile' }) }}">
                        {% if session.image != '' %}
                        <img src="{{ asset('uploads') }}/{{ session.image }}" alt="User Avatar" class="header-avatar" />
                        {% else %}
                        <img src="http://lorempixel.com/20/20/people/" alt="User Avatar" class="header-avatar" />    
                        {% endif %}
                        {{ session.first_name }} {{ session.last_name }}
                    </a>
                </li>
                <li><a href="{{ path('logout') }}">Wyloguj się</a></li>
            </ul>
        </div>
      
    </div>
</div>

{% include "breadcrumbs.html.twig" %}
            
<div class="container">   
    {% if app_error is defined %}{{ app_error | raw }}{% endif %}
    <div class="alert alert-dismissable alert-warning">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <p><strong>Uwaga! </strong>Oprogramowanie w trakcie budowy</p>
    </div>
</div>   